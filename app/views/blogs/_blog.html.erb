<div id="<%= dom_id blog %>">
  <h3><%= blog.title %></h3>
  <p><%= blog.body %></p>
  <p><%= link_to blog.status, toggle_status_blog_path(blog) %></p>
  <p>
    <%= link_to "Show this blog", blog %> |
    <%= link_to "Edit this blog", edit_blog_path(blog) %> |
    <%= link_to "Delete this blog", blog, method: :delete %>
  </p>

</div>


