

<article class="blog-post">
  <h2 class="blog-post-title mb-1"><%= link_to blog.title.upcase, blog %></h2>
  <p class="blog-post-meta">Published <%= distance_of_time_in_words(blog.created_at, Time.now) %> ago</p>
  
  <% if logged_in?(:site_admin) %>
    <p class="blog-post-meta">
      <%= link_to blog.status, toggle_status_blog_path(blog) if logged_in?(:site_admin) %> /
      <%= link_to edit_blog_path(blog), class: 'edit-icon' do %>
        <i class="bi bi-pencil-square"></i>
      <% end %> /
      <%= link_to blog, method: :delete, class: 'delete-icon' do %>
        <i class="bi bi-trash"></i>
      <% end %>
    </p>
  <% end %>
  <p>
    <%= blog.body %>
  </p>
  
</article>
