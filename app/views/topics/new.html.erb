<div class='col-md-8'>

    <h1>New Topic</h1>

    <div class='w-50'>
        <%= form_for(@topic) do |form| %>
            <div class='form-group p-3'>
                <%= form.label :title %>
                <%= form.text_field :title, class: 'form-control' %>
            </div>

            <div class='form-group p-2 text-end'>
                <%= form.submit "Save Topic", class: 'btn btn-primary' %>
            </div>
        <% end %>
    </div>
    <div class='my-5'>
        <%= link_to "Back to blogs", blogs_path %> /
        <%= link_to "Back to topics", topics_path %>
    </div>
</div>