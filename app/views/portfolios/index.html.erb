<div class="album bg-body-tertiary">
    <%= render 'shared/portfolio_masthead' %>
    <div class='container'>
        <%= source_helper("alert alert-success") %>

        <% if logged_in?(:site_admin) %>
            <p><%= link_to "Create New Item", new_portfolio_path, class: 'btn' %></p>
        <% end %>

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 sortable">

            <%= render partial: 'portfolio_item', collection: @portfolio_items %>

        </div>
    </div>
</div>
    