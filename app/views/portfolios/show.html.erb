<div class='container portfolio-container'>
    <div class='row'>
        <div class='col-md-7'>
            <%= image_tag "#{@portfolio_item.main_image}", width: '100%' %>
        </div>
        <div class='col-md-5'>
            <h1><%= @portfolio_item.title %></h1>
            <hr>
            <em><%= @portfolio_item.subtitle %></em>

            <p><%= @portfolio_item.body %></p>

            <hr>

            <h3>Technologies Used:</h3>

            <% @portfolio_item.technologies do |t| %>
                <p><%= t.name %></p>
            <% end %>
        </div>
    </div>
    <div class='show-actions-wrapper'>
        
        <% if logged_in?(:site_admin) %>
            <p><%= link_to "Edit", edit_portfolio_path(@portfolio_item), class: 'btn portfolio-btn-primary' %>
            <%= button_to "Delete Portfolio Item", @portfolio_item, method: :delete, class: 'btn btn-danger' %></p>
        <% end %>
        
    </div>
</div>










