<%= image_tag @portfolio_item.main_image %>

<h1><%= @portfolio_item.title %></h1>

<em><%= @portfolio_item.subtitle %></em>

<p><%= @portfolio_item.body %></p>

<h2>Technologies Used:</h2>

<% @portfolio_item.technologies do |t| %>
    <p><%= t.name %></p>
<% end %>

<p><%= link_to "Edit", edit_portfolio_path(@portfolio_item) if logged_in?(:site_admin) %> |
    <%= link_to "Delete Portfolio Item", @portfolio_item, method: :delete if logged_in?(:site_admin) %></p>

<%= link_to "Back to Portfolios", portfolios_path %>

