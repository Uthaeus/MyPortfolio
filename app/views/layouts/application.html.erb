<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= @page_title %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="keywords" content="<%= @seo_keywords %>" />
    <%= favicon_link_tag 'favicons/portfolio_favicon.ico' %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="d-flex min-vh-100 text-center text-bg-dark">
    
    <div class="cover-container d-flex w-100 h-100 flex-column mx-auto p-3">
      <%= render "shared/application_nav" %>

      <%# <div id='background'></div> %>

      <%= video_tag(
        'Smoke.mp4',
        id: 'background',
        autoplay: true,
        loop: true,
        muted: true,
      ) %>
      
      <%= yield %>

      <%= render 'shared/alerts' %>

      <%= render "shared/application_footer" %>
    </div>
  </body>
</html>
